@model IEnumerable<Doc>
@{
    ViewData["Title"] = "Index";
}



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Doc List</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="Doc" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
			</a>
		</div>
	</div>
    <br /><br />


<table class="table table-brered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Name
            </th>
             <th>
                Url
            </th>
            <th>
                Description
            </th>
            <th>
                Tittle
            </th>
             <th>
                Section
            </th>
            <th>
                Created Date
            </th>

              <th></th>
           
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="04%">
                    @obj.Id
                </td>
                <td width="10%">
                    @obj.Name
                </td>
                <td width="10%">
                    @obj.Url
                </td>
                <td width="20%">
                    @obj.Description
                </td>
                 <td width="10%">
                    @obj.Tittle
                </td>
                <td width="10%">
                    @obj.Section
                </td>
                <td width="10%">
                    @obj.CreateDateTime
                </td>
                 <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Doc" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>

                        <a asp-controller="Doc" asp-action="Details" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"> <i class="bi bi-binoculars"></i> Details</a>
                  
                        <a asp-controller="Doc" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2"> <i class="bi bi-trash3-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
